<form method="post" action="{{ path('app_artiste_delete', {'id': artiste.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artiste.id) }}">
    <button class="btn btn-outline-danger m-5">Supprimer <span class="mx-3">"{{ artiste.prenom ~ " " ~ artiste.nom }}"</span></button>
</form>
