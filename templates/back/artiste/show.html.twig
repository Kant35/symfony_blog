{% extends 'base.html.twig' %}

{% block title %}Artiste{% endblock %}

{% block body %}

    <a class="text-white fs-3 position-absolute ms-3" href="{{ path('app_artiste_index') }}"><i class="fas fa-arrow-alt-circle-left"></i></a>

    <h1 class="text-center">{{ artiste.prenom ~ " " ~ artiste.nom }}</h1>

    <table class="table text-white">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artiste.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ artiste.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ artiste.prenom }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ artiste.photo }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('app_artiste_edit', {'id': artiste.id}) }}">Modifier</a>

    {{ include('back/artiste/_delete_form.html.twig') }}
{% endblock %}
