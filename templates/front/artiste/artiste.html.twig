{% extends "base.html.twig" %}

{% block title %}{{ artiste }}{% endblock %}

{% block body %}

    <h1 class="text-center mt-3">{{ artiste }}</h1>
    
    <div class="col-2 mx-auto rounded pt-3">
        <img src="{{ vich_uploader_asset(artiste) }}" class="img-fluid rounded-start" alt="...">
    </div>

    <section class="mx-5">
        {% if artiste.filmsJoues is not empty %}
            <h5>Films Joues</h5>
            <div class="d-flex flex-wrap">
                {% for film in artiste.filmsJoues %}
                    <div class="col-2 mx-1 mb-4">
                        <img src="{{ vich_uploader_asset(film) }}" class="img-fluid rounded-start" alt="...">
                        <h6 class="text-center mt-3"> <a href="" class="text-decoration-none text-white"> {{ film.titre }} </a></h6>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        {% if artiste.filmsRealises is not empty %}
        
            <h5>Films Réalisés</h5>
            <div class="d-flex flex-wrap">
                {% for film in artiste.filmsRealises %}
                    <div class="col-2 mx-1 mb-4">
                        <img src="{{ vich_uploader_asset(film) }}" class="img-fluid rounded-start" alt="...">
                        <h6 class="text-center mt-3"> <a href="" class="text-decoration-none text-white"> {{ film.titre }}</a></h6>
                    </div>
                {% endfor %}
            </div>

        {% endif %}

    </section>



{% endblock %}